/* 整体容器 */
.user-container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info {
  background: linear-gradient(135deg, #1296db, #0f77aa);
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  margin: 0 20rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.user-info::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
  border-radius: 50%;
}

.user-info::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -30%;
  width: 150rpx;
  height: 150rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
  border-radius: 50%;
}

.avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.avatar:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
}

.user-detail {
  flex: 1;
}

.login-text {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
}

.login-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
  backdrop-filter: blur(5rpx);
  transition: all 0.3s ease;
}

.login-desc:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

/* 患者用户VIP信息 */
.vip-section {
  display: flex;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 20rpx;
}

.vip-card, .rights-bag {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.vip-card:active, .rights-bag:active {
  transform: scale(0.95);
}

.vip-icon, .bag-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.vip-card text, .rights-bag text {
  color: #ffffff;
  font-size: 26rpx;
}

.count {
  background: #ffffff;
  color: #1296db !important;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 8rpx;
  font-size: 24rpx !important;
  font-weight: bold;
}

/* 陪护人员状态信息 */
.status-section {
  display: flex;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 20rpx;
}

.status-card, .order-count {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.status-card:active, .order-count:active {
  transform: scale(0.95);
}

.status-icon, .count-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.status-card text, .order-count text {
  color: #ffffff;
  font-size: 26rpx;
}

.rating {
  background: #ffffff;
  color: #1296db !important;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 8rpx;
  font-size: 24rpx !important;
  font-weight: bold;
}

/* 管理员状态信息 */
.admin-section {
  display: flex;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 20rpx;
}

.admin-card, .system-status {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.admin-card:active, .system-status:active {
  transform: scale(0.95);
}

.admin-icon, .system-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.admin-card text, .system-status text {
  color: #ffffff;
  font-size: 26rpx;
}

.status {
  background: #ffffff;
  color: #1296db !important;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 8rpx;
  font-size: 24rpx !important;
  font-weight: bold;
}

/* 订单管理 */
.order-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(0, 0, 0, 0.03);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.view-all {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.view-all:active {
  opacity: 0.8;
}

.view-all image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 6rpx;
}

.order-types {
  display: flex;
  justify-content: space-between;
}

.order-type {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  transition: all 0.3s ease;
  position: relative;
  border-radius: 16rpx;
}

.order-type::after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 3rpx;
  background: #1296db;
  transition: width 0.3s ease;
}

.order-type:active::after {
  width: 60%;
}

.order-type:active {
  transform: scale(0.95);
}

.order-type image {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.order-type:active image {
  transform: translateY(-4rpx);
}

.order-type text {
  font-size: 24rpx;
  color: #666;
}

/* 管理员控制面板 */
.admin-panel {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.admin-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.admin-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #ffffff, #f8f9fa);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.admin-item:active {
  transform: scale(0.95);
  background: #f1f3f5;
}

.admin-item image {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.admin-item text {
  font-size: 26rpx;
  color: #495057;
}

/* 服务中心 */
.service-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.03);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: #1296db;
  border-radius: 3rpx;
}

.service-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #ffffff, #f8f9fa);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.service-item:active {
  transform: scale(0.95);
  background: #f1f3f5;
}

.service-item image {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.service-item text {
  font-size: 26rpx;
  color: #495057;
}

.contact-button {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.contact-button::after {
  border: none;
}

.contact-button image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 12rpx;
}

.contact-button text {
  font-size: 24rpx;
  color: #666;
}

.contact-button:active {
  transform: scale(0.95);
}

/* 客服咨询按钮样式 */
.contact-button {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: transparent;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.contact-button::after {
  border: none;
}

.contact-button image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.contact-button text {
  font-size: 24rpx;
  color: #333;
}

.service-item {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.service-item:active {
  transform: scale(0.95);
}

.service-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.service-item text {
  font-size: 24rpx;
  color: #333;
}
/* 退出登录按钮 */
.logout-section {
  padding: 30rpx 40rpx 60rpx;
  display: flex;
  justify-content: center;
}

.logout-btn {
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(135deg, #adb5bd, #868e96);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(134, 142, 150, 0.15);
  transition: all 0.3s ease;
  border: none;
  opacity: 0.85;
}

.logout-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 6rpx rgba(134, 142, 150, 0.1);
  background: linear-gradient(135deg, #868e96, #6c757d);
}
