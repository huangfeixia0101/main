.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.profile-card {
  background: linear-gradient(135deg, #ffffff, #f8f9ff);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.avatar-wrapper {
  background: none;
  padding: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-wrapper::after {
  border: none;
}

.avatar-container {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 16rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #f0f0f0;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.edit-text {
  font-size: 28rpx;
  color: #1296db;
  text-align: center;
  font-weight: 500;
}

.info-item {
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #eef0f6;
  padding-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  min-width: 160rpx;
  flex-shrink: 0;
}

.input {
  flex: 1;
  height: 88rpx;
  background: transparent;
  padding: 0;
  font-size: 28rpx;
  box-sizing: border-box;
  border: none;
  text-align: right;
}

.input:focus {
  background: transparent;
  box-shadow: none;
}

.picker {
  flex: 1;
  height: 88rpx;
  background: transparent;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  box-sizing: border-box;
  border: none;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.save-button-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx 40rpx;
  background: rgba(255, 255, 255, 0.98);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
  backdrop-filter: blur(10rpx);
}

.save-button {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #4CDBC4, #45BFA9);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8rpx 16rpx rgba(76, 219, 196, 0.25);
}

.save-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.15);
}

.avatar-error {
  position: absolute;
  top: 50%;
  left: 50%;
