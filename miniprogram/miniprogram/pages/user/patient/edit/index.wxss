.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.header {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-container {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.input {
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  padding: 0 10rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  font-size: 30rpx;
  color: #333;
  padding: 10rpx;
  line-height: 1.5;
}

.radio-group {
  display: flex;
  align-items: center;
}

.radio {
  margin-right: 40rpx;
  font-size: 30rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-item .label {
  margin-bottom: 0;
}

.save-btn {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  height: 90rpx;
  background-color: #1aad19;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 10rpx rgba(26, 173, 25, 0.2);
}

.save-btn.disabled {
  opacity: 0.6;
}