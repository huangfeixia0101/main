/* pages/user/ratings/index.wxss */
.ratings-container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 500;
  margin-left: 20rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-container image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-container text {
  font-size: 28rpx;
  color: #999;
}

/* 评价列表 */
.ratings-list {
  padding-bottom: 30rpx;
}

.rating-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.rating-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.service-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.rating-date {
  font-size: 24rpx;
  color: #999;
}

.rating-stars {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.star {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="%23ddd" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.star.active {
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="%23ffb400" stroke="%23ffb400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>');
}

.rating-score {
  font-size: 28rpx;
  color: #ffb400;
  margin-left: 10rpx;
}

.rating-comment {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.rating-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.rating-images image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.rating-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.view-detail {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #07c160;
}

.view-detail image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 6rpx;
}