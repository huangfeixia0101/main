.coupon-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 标签页样式 */
.tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding-bottom: 10rpx;
}

.tab.active {
  color: #4a90e2;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #4a90e2;
  border-radius: 2rpx;
}

/* 优惠券列表样式 */
.coupon-list {
  padding: 10rpx 0;
}

.coupon-item {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.coupon-item::before {
  content: '';
  position: absolute;
  left: 25%;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: radial-gradient(circle at center, #f5f5f5 5rpx, transparent 6rpx);
  background-size: 2rpx 20rpx;
  background-repeat: repeat-y;
}

.coupon-left {
  width: 25%;
  background-color: #4a90e2;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

.coupon-amount {
  font-size: 28rpx;
  font-weight: bold;
}

.amount-value {
  font-size: 48rpx;
}

.coupon-condition {
  font-size: 22rpx;
  margin-top: 10rpx;
}

.coupon-right {
  flex: 1;
  padding: 20rpx;
  position: relative;
}

.coupon-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.coupon-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.coupon-date {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.use-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background-color: #4a90e2;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  line-height: 1.5;
  min-width: 120rpx;
}

.coupon-status {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载中样式 */
.loading {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 28rpx;
}