.container {
  padding-bottom: 400rpx;
  background: #f5f6f7;
}

.service-images {
  width: 100%;
  height: 400rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.service-images image {
  width: 100%;
  height: 100%;
}

.service-info {
  padding: 30rpx;
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.service-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.brief {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.detail-section,
.guarantee-section,
.notice-section {
  margin: 20rpx 20rpx 0;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: #1296db;
  border-radius: 3rpx;
}

.detail-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.guarantee-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.guarantee-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  align-items: center;
}

.guarantee-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.guarantee-item text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.notice-list {
  padding: 0 10rpx;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.dot {
  margin-right: 12rpx;
  color: #1296db;
  font-weight: bold;
}

.specs-section {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 60rpx;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
