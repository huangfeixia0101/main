/* pages/admin/order-management/index.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 搜索栏样式 */
.search-bar {
  margin-bottom: 20rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  height: 40rpx;
  font-size: 28rpx;
}

.clear-icon {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon image {
  width: 28rpx;
  height: 28rpx;
}

/* 筛选标签样式 */
.filter-tabs {
  display: flex;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  white-space: nowrap;
  padding: 0 10rpx;
}

.tab {
  display: inline-block;
  text-align: center;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1296db;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #1296db;
  border-radius: 3rpx;
}

/* 订单列表样式 */
.order-list {
  margin-bottom: 30rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-no {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.order-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.status-unpaid {
  background-color: #fff7e6;
  color: #fa8c16;
}

.status-paid {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-accepted {
  background-color: #f9f0ff;
  color: #722ed1;
}

.status-in-service {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-completed {
  background-color: #f0f5ff;
  color: #2f54eb;
}

.status-cancelled {
  background-color: #f5f5f5;
  color: #999;
}

.order-content {
  padding: 20rpx;
}

.order-info {
  font-size: 28rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
}

.label {
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  flex: 1;
}

.value.price {
  color: #ff4d4f;
  font-weight: bold;
}

.order-footer {
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: flex-end;
}

.order-actions {
  display: flex;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin-left: 15rpx;
  background-color: #fff;
  line-height: 1.5;
}

.detail-btn {
  color: #1890ff;
  border: 1rpx solid #1890ff;
}

.cancel-btn {
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

.complete-btn {
  color: #52c41a;
  border: 1rpx solid #52c41a;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态样式 */
.loading, .load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #1296db;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.3);
}