/* pages/admin/statistics/index.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 日期范围选择 */
.date-range {
  display: flex;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.range-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.range-item.active {
  color: #1296db;
  font-weight: bold;
}

.range-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #1296db;
  border-radius: 3rpx;
}

/* 数据概览卡片 */
.stats-overview {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.card-header text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.card-content {
  font-size: 26rpx;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.stat-label {
  color: #666;
}

.stat-value {
  font-weight: bold;
  color: #333;
}

.stat-value.revenue {
  color: #ff4d4f;
}

/* 趋势图表 */
.trend-section {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.chart-container {
  height: 300rpx;
  width: 100%;
}

.chart-placeholder {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
  border-radius: 6rpx;
  color: #999;
  font-size: 26rpx;
}

/* 热门服务 */
.top-services {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.service-list {
  margin-top: 15rpx;
}

.service-item {
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.service-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.service-stats {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

.service-revenue {
  color: #ff4d4f;
}

/* 最近订单 */
.recent-orders {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.order-list {
  margin-top: 15rpx;
}

.order-item {
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.order-no {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  font-size: 24rpx;
  color: #1890ff;
}

.order-info {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.order-amount {
  color: #ff4d4f;
}

/* 空状态 */
.empty-state {
  padding: 30rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #1296db;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.3);
}