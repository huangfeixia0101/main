/* 积分历史详情页面样式 */
.history-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  padding: 20rpx 0 30rpx;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 筛选器 */
.filter-section {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.filter-tabs {
  display: flex;
  background: #f8f9ff;
  border-radius: 15rpx;
  padding: 8rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: #667eea;
  color: white;
  font-weight: 600;
}

/* 历史记录列表 */
.history-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.history-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 20rpx;
}

.history-icon.earn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.history-icon.spend {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.history-desc {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.history-source {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

.history-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.history-points {
  font-size: 32rpx;
  font-weight: bold;
}

.history-points.earn {
  color: #52c41a;
}

.history-points.spend {
  color: #ff4d4f;
}

/* 空状态 */
.empty-state {
  background: white;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.go-earn-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 加载更多 */
.load-more {
  padding: 40rpx 0;
  text-align: center;
}

.load-more-btn {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}

.load-more-btn[loading] {
  background: #f5f5f5;
  color: #999;
  border-color: #ddd;
}

/* 没有更多数据 */
.no-more {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}