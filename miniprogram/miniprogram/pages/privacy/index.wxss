/* pages/privacy/index.wxss */
.container {
  padding: 30rpx;
  background-color: #fff;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  padding-left: 20rpx;
  border-left: 8rpx solid #1aad19;
}

.section-content {
  padding: 0 10rpx;
}

.sub-section {
  margin-bottom: 30rpx;
}

.sub-title {
  font-size: 30rpx;
  font-weight: bold;
  margin: 20rpx 0 10rpx;
  color: #444;
}

.paragraph {
  margin-bottom: 20rpx;
  text-align: justify;
  color: #666;
}

.important {
  font-weight: bold;
  color: #e64340;
}